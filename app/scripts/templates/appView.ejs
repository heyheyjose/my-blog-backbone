<section class="user-input">
	<img src="images/blog512.png">
	<h1>Title:</h1>
	<input type="text" class="title-field" name="title" placeholder="Enter your title here..." autofocus>
	<h1>Post:</h1>
	<textarea class="post-field" rows="12" cols="40" name="postBody" placeholder="Enter your post here..."></textarea>
	<input type="submit" class="preview-button" value="Preview Your Post">
</section>

<section class="user-output">
	<h1>Preview:</h1>
	<div class="post-target"></div>
	<input type="submit" class="publish-button" value="Publish Your Post">
</section>
